	LD_LIBRARY_PATH=${LD_LIBRARY_PATH}\:${X11}/lib
	LD_LIBRARY_PATH=${LD_LIBRARY_PATH}\:${MY_LIB_DIR}
	LD_LIBRARY_PATH=${LD_LIBRARY_PATH}\:/usr/local/lib
	LD_LIBRARY_PATH=${LD_LIBRARY_PATH}\:/usr/lib
	;; # endif WIN32*
    

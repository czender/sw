    export BIBINPUTS=".:${HOME}/sw/tex//:${HOME}/texmf//:${TEXMFDIR}/bibtex//::" # // is recursive, :: activates default system search paths
#    export TEXMFCNF=${TEXMFDIR}/web2c # One level above bibtex, tex,
#    export THUMBPDF="--debug --verbose --device=mono" # Arguments to thumbpdf
    ;; # SUN* | LINUX* | AIX* | SGI* )
esac # !${PVM_ARCH}


function dotgrep { 'grep ${1} .[a-zA-Z]*' ; }
function difffunc { diff -c -w ${1} ${2} | more ; } # -c = print 3 lines around diff, -w = ignore whitespace diffs
function fl_rm { 'set tmp = `find . -name ${1} -print`;rm ${tmp}' ; }

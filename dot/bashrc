# Total size of all files in directory, including symlinks:
function fl_sz_drc { du -sbhL ${1} ; } # fl_sz_drc ${DATA}/maps
# Total size of all files in list:
function fl_sz_lst { du -ch ${1} | tail -1 | cut -f 1 ; } # fl_sz_lst `ls *.nc`
